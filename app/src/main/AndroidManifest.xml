<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iodaniel.notesio">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesIO">
        <activity
            android:name=".note_package.CreateNote"
            android:theme="@style/Theme.CreateNote"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".task_card_package.CreateTaskCard" />
        <activity android:name=".task_card_package.ActivityCreateTask" />
        <activity android:name=".task_card_package.ActivityTasks"
            android:theme="@style/Theme.Tasks"/>
    </application>

</manifest>