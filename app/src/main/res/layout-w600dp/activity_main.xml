<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/activity_main_land_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:background="@color/app_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="40dp"
                    android:padding="10dp"
                    android:text="NOTE IO"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/activity_main_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginVertical="1dp"
                    android:background="@drawable/task_card_background"
                    android:foreground="@drawable/gray_ripple"
                    android:padding="10dp"
                    android:text="Notes"
                    android:textColor="@color/app_color" />

                <TextView
                    android:id="@+id/activity_main_tasks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/task_card_background"
                    android:foreground="@drawable/gray_ripple"
                    android:padding="10dp"
                    android:text="Tasks"
                    android:textColor="@color/app_color" />

            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/app_color" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_root"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
